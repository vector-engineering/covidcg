{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "An interactive world map supporting pan and zoom.",
    "width": 400,
    "height": 300,
    "signals": [
        {
            "name": "tx",
            "update": "width / 2"
        },
        {
            "name": "ty",
            "update": "height / 2"
        },
        {
            "name": "angles",
            "value": [
                0,
                0
            ],
            "on": [
                {
                    "events": "mousedown",
                    "update": "[rotateX, centerY]"
                }
            ]
        },
        {
            "name": "cloned",
            "value": null,
            "on": [
                {
                    "events": "mousedown",
                    "update": "copy('projection')"
                }
            ]
        },
        {
            "name": "start",
            "value": null,
            "on": [
                {
                    "events": "mousedown",
                    "update": "invert(cloned, xy())"
                }
            ]
        },
        {
            "name": "drag",
            "value": null,
            "on": [
                {
                    "events": "[mousedown, window:mouseup] > window:mousemove",
                    "update": "invert(cloned, xy())"
                }
            ]
        },
        {
            "name": "delta",
            "value": null,
            "on": [
                {
                    "events": {
                        "signal": "drag"
                    },
                    "update": "[drag[0] - start[0], start[1] - drag[1]]"
                }
            ]
        },
        {
            "name": "rotateX",
            "value": 0,
            "on": [
                {
                    "events": {
                        "signal": "delta"
                    },
                    "update": "angles[0] + delta[0]"
                }
            ]
        },
        {
            "name": "centerY",
            "value": 0,
            "on": [
                {
                    "events": {
                        "signal": "delta"
                    },
                    "update": "clamp(angles[1] + delta[1], -60, 60)"
                }
            ]
        }
    ],
    "projections": [
        {
            "name": "projection",
            "type": "mercator",
            "scale": 100,
            "center": [
                -25,
                {
                    "signal": "centerY"
                }
            ],
            "translate": [
                {
                    "signal": "tx"
                },
                {
                    "signal": "ty"
                }
            ]
        }
    ],
    "data": [
        
        {
            "name": "dominant_sequences",
            "url": "https://storage.googleapis.com/ve-public/dominant_sequences.json",
            "format": {"type": "json"}
        },
        {
            "name": "top_lineages",
            "url": "https://storage.googleapis.com/ve-public/dominant_sequences.json",
            "format": {"type": "json"},
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": ["lineage"],
                    "ops": ["sum"],
                    "fields": ["count"],
                    "as": ["totals"]
                },
                {      
                    "type": "window",
                    "sort": {"field": "count", "order": "descending"},
                    "ops": ["row_number"], "as": ["rank"]
                },
                {
                    "type": "filter",
                    "expr": "datum.rank < 4 || datum.lineage == 'None'"
                }
            ]
        },
        
        {
            "name": "iso_lookup",
            "url": "https://storage.googleapis.com/ve-public/new_global_data/iso_lookup.json",
            "format":{"type": "json"},
            "transform": [
                {
                    "type": "lookup",
                    "from": "dominant_sequences",
                    "key": "country",
                    "fields": [
                        "country"
                    ],
                    "values": [
                        "lineage"
                    ]
                }
            ]
        },
        {
            "name": "world",
            "url": "https://raw.githubusercontent.com/vega/datalib/master/test/data/world-110m.json",
            "format": {
                "type": "topojson",
                "feature": "countries"
            },
            "transform": [
                {
                    "type": "lookup",
                    "from": "iso_lookup",
                    "key": "UID",
                    "fields": [
                        "id"
                    ],
                    "values": [
                        "lineage"
                    ]
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "ordinal",
            "domain": {"data": "top_lineages", "field": "lineage"},
            "range": {"scheme": "category20"}
        }
    ],
    "legends": [
        {
        "fill": "color",
        "title": "Dominant Sequences",
        "orient": "bottom-right",
        "direction": "horizontal",
        "encode": {
            "symbols": {"enter": {"fillOpacity": {"value": 0.75}}},
            "labels": {"update": {"text": {"field": "value"}}}
        }
        }
    ],
    "marks": [
        {
            "type": "shape",
            "clip": true,
            "from": {
                "data": "world"
            },
            "encode": {
                "enter": {
                    "strokeWidth": {
                        "value": 0.5
                    },
                    "stroke": {
                        "value": "#bbb"
                    }
                },
                "update": {
                    "fill": [
                        {
                            "test": "datum.sequences === null",
                            "value": "#AAA"
                        },
                        {
                            "scale": "color",
                            "field": "lineage"
                        }
                    ]
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "projection": "projection"
                }
            ]
        }
    ]
}