{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "An interactive world map supporting pan and zoom.",
    "width": 400,
    "height": 300,
    "signals": [
        {
            "name": "tx",
            "update": "width / 2"
        },
        {
            "name": "ty",
            "update": "height / 2"
        },
        {
            "name": "angles",
            "value": [
                0,
                0
            ],
            "on": [
                {
                    "events": "mousedown",
                    "update": "[rotateX, centerY]"
                }
            ]
        },
        {
            "name": "cloned",
            "value": null,
            "on": [
                {
                    "events": "mousedown",
                    "update": "copy('projection')"
                }
            ]
        },
        {
            "name": "start",
            "value": null,
            "on": [
                {
                    "events": "mousedown",
                    "update": "invert(cloned, xy())"
                }
            ]
        },
        {
            "name": "drag",
            "value": null,
            "on": [
                {
                    "events": "[mousedown, window:mouseup] > window:mousemove",
                    "update": "invert(cloned, xy())"
                }
            ]
        },
        {
            "name": "delta",
            "value": null,
            "on": [
                {
                    "events": {
                        "signal": "drag"
                    },
                    "update": "[drag[0] - start[0], start[1] - drag[1]]"
                }
            ]
        },
        {
            "name": "rotateX",
            "value": 0,
            "on": [
                {
                    "events": {
                        "signal": "delta"
                    },
                    "update": "angles[0] + delta[0]"
                }
            ]
        },
        {
            "name": "centerY",
            "value": 0,
            "on": [
                {
                    "events": {
                        "signal": "delta"
                    },
                    "update": "clamp(angles[1] + delta[1], -60, 60)"
                }
            ]
        }
    ],
    "projections": [
        {
            "name": "projection",
            "type": "mercator",
            "scale": 100,
            "center": [
                0,
                {
                    "signal": "centerY"
                }
            ],
            "translate": [
                {
                    "signal": "tx"
                },
                {
                    "signal": "ty"
                }
            ]
        }
    ],
    "data": [
      {
      "name": "case_count",
      "url": "https://storage.googleapis.com/ve-public/new_global_data/case_count.json",
      "format": {"parse": {"month": "date"}}
    },
    {
      "name": "total_cases",
      "source": "case_count",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["country"],
          "fields": ["cumulative_cases"],
          "ops": ["max"],
          "as": ["cases"]
        }
      ]
    },
        {
            "name": "iso_lookup",
            "url": "https://storage.googleapis.com/ve-public/new_global_data/iso_lookup.json",
            "format":{"type": "json"},
            "transform": [
                {
                    "type": "lookup",
                    "from": "total_cases",
                    "key": "country",
                    "fields": [
                        "country"
                    ],
                    "values": [
                        "cases"
                    ]
                },
                {"type": "formula", "as": "logx", "expr": "log(datum.cases) / LN10"}

            ]
        },
        {
            "name": "world",
            "url": "https://raw.githubusercontent.com/vega/datalib/master/test/data/world-110m.json",
            "format": {
                "type": "topojson",
                "feature": "countries"
            },
            "transform": [
                {
                    "type": "lookup",
                    "from": "iso_lookup",
                    "key": "UID",
                    "fields": [
                        "id"
                    ],
                    "values": [
                        "logx"
                    ]
                }
            ]
        }
    ],
    "scales": [
        {
          "name": "color",
          "type": "quantize",
          "domain": [0, 8],
          "range": {"scheme": "yellowgreenblue", "count": 10}
        }
    ],
    "legends": [
        {
        "fill": "color",
        "title": "# of Sequences",
        "orient": "bottom-right",
        "direction": "horizontal",
        "encode": {
            "symbols": {"enter": {"fillOpacity": {"value": 0.75}}},
            "labels": {
                "interactive": true,
                "update": {
                "fontSize": {"value": 12},
                "fill": {"value": "black"}
                },
                "hover": {
                "fill": {"value": "firebrick"}
                }
            }
        }
        }
    ],
    "marks": [
        {
            "type": "shape",
            "clip": true,
            "from": {
                "data": "world"
            },
            "encode": {
                "enter": {
                    "strokeWidth": {
                        "value": 0.5
                    },
                    "stroke": {
                        "value": "#bbb"
                    }
                },
                "update": {
                    "fill": [
                        {
                            "test": "datum.logx === null",
                            "value": "#AAA"
                        },
                        {
                            "scale": "color",
                            "field": "logx"
                        }
                    ]
                }
            },
            "transform": [
                {
                    "type": "geoshape",
                    "projection": "projection"
                }
            ]
        }
    ]
}