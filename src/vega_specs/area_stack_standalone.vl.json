{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://ve-public.storage.googleapis.com/case_data.csv",
    "format": {
      "type": "csv",
      "parse": {
        "location_id": "number",
        "sample_date": "date",
        "cases": "number"
      }
    }
  },
  "transform": [
    {
      "filter": {
        "field": "location_id",
        "lt": 120
      }
    },
    {
      "aggregate": [
        {
          "op": "count",
          "field": "gisaid_id",
          "as": "cases_sum"
        }
      ],
      "groupby": ["sample_date", "lineage"]
    }
  ],
  "vconcat": [
    {
      "width": "container",
      "height": 300,
      "mark": {
        "type": "area",
        "interpolate": "basis"
      },
      "selection": {
        "highlight": {
          "type": "single",
          "empty": "all",
          "on": "mouseover",
          "encodings": ["color"]
        }
      },
      "encoding": {
        "x": {
          "field": "sample_date",
          "type": "temporal",
          "scale": {
            "domain": {
              "selection": "brush"
            }
          },
          "axis": {
            "title": null,
            "grid": true
          }
        },
        "y": {
          "field": "cases_sum",
          "type": "quantitative",
          "axis": {
            "title": "Cases by Lineage"
          },
          "stack": "normalize"
        },
        "color": {
          "field": "lineage",
          "type": "nominal",
          "scale": { "scheme": "tableau20" },
          "legend": {
            "direction": "vertical",
            "columns": 2,
            "clipHeight": 15,
            "rowPadding": 2,
            "columnPadding": 10,
            "title": "Haplotype",
            "orient": "right",
            "fillColor": "#FFF",
            "strokeColor": "#AAA",
            "padding": 10,
            "offset": 10,
            "cornerRadius": 5
          }
        },
        "opacity": {
          "condition": { "selection": "highlight", "value": 1 },
          "value": 0.8
        },
        "tooltip": {
          "field": "lineage",
          "type": "nominal"
        }
      }
    },
    {
      "width": "container",
      "height": 50,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "sample_date",
          "type": "temporal",
          "axis": {
            "tickCount": "week",
            "title": "Date",
            "labelAlign": "left",
            "labelExpr": "[timeFormat(datum.value, '%b'), timeFormat(datum.value, '%d')]",
            "labelOffset": 4,
            "labelPadding": -24,
            "tickSize": 30
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "cases_sum",
          "type": "quantitative",
          "axis": {
            "title": "All Cases"
          }
        },
        "fill": {
          "condition": {
            "selection": "brush",
            "value": "blue"
          },
          "value": "red"
        }
      },
      "selection": {
        "brush": {
          "type": "interval",
          "encodings": ["x"]
        }
      }
    }
  ],
  "config": {
    "concat": {
      "spacing": 0
    },
    "bar": {
      "continuousBandSize": 5
    }
  }
}
