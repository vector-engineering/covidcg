      "source": "cooccurrence_data",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["combi"]
        },
        {
          "type": "formula",
          "as": "span",
          "expr": "rangeStep * bandspace(1, innerPadding, outerPadding)"
        },
        {
          "type": "stack",
          "field": "span"
        },
        {
          "type": "extent",
          "field": "y1",
          "signal": "yExtent"
        }
      ]
    }
