      "titleFontSize": 14,
      "titlePadding": 10
    },
    {
      "orient": "left",
      "scale": "yscale",
      "domain": false,
      "zindex": 1,
      "labelFontSize": 14,
      "labelLimit": 200,
      "labelPadding": 4
    }
  ],

