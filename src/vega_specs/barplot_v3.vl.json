{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "description": "Google's stock price over time.",
    "data": {
      "name": "entropy_data",
      "format": {
        "type": "json",
        "parse": {"date": "date"}
      }
    },
    "transform": [{
      "aggregate": [{
        "op": "sum",
        "field": "cases",
        "as": "counts"
      }],
      "groupby": [
        "position"
      ]
    }, {
      "calculate": "5",
      "as": "bar_width"
    }],
    "vconcat": [
      {
        "width": 1000,
        "height": 100,
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "position",
            "type": "quantitative",
            "axis": null
          },
          "y": {
            "field": "counts",
            "type": "quantitative",
            "axis": {
              "title": "Count"
            }
          }
        },
        "selection": {
          "brush": {
            "type": "interval",
            "encodings": [
              "x"
            ]
          }
        }
      },
      {
        "width": 1000,
        "height": 80,
        "data": {
          "url": "https://ve-public.storage.googleapis.com/genes.csv",
          "format": {
            "type": "csv"
          }
        },
        "transform": [
          { "calculate": "0", "as": "y" },
          { 
            "calculate": "((datum.index % 2) ? -1: 1) * (2 + 100)", 
            "as": "offset" 
          },
          {
            "calculate": "datum.end - datum.start",
            "as": "width"
          },
          { 
            "calculate": "(datum['width'] < (length(datum['gene']) * 200)) ? ((datum.index % 2) ? datum['end'] : datum['start']) : toNumber(datum.start) + (datum.width / 2)", 
            "as": "text_x" 
          },
          { 
            "calculate": "(datum['width'] < (length(datum['gene']) * 200)) ? datum.offset * 2.2 : toNumber(datum.y) + ((datum.offset - datum.y) / 2)", 
            "as": "text_y" 
          }
        ],
        "layer": [{
          "mark": {
            "type": "bar",
            "stroke": "#000",
            "clip": true
          },
          "encoding": {
            "x": {
              "field": "start",
              "type": "quantitative",
              "axis": {
                "title": ["Position", ""],
                "tickBand": "extent"
              }
            },
            "x2": {
              "field": "end"
            },
            "y": {
              "field": "y",
              "type": "quantitative",
              "axis": null,
              "scale": {
                "domain": [-300, 300]
              }
            },
            "y2": {
              "field": "offset"
            },
            "fill": {
              "condition": {
                "selection": "gn",
                "value": "white"
              },
              "field": "gene",
              "legend": null,
              "type": "nominal"
            }
          },
          "selection": {
            "gn": {
              "type": "single",
              "empty": "none"
            }
          }
        }, {
          "mark": {
            "type": "text",
            "baseline": "middle",
            "align": "center"
          },
          "encoding": {
            "x": {
              "field": "text_x",
              "type": "quantitative"
            },
            "y": {
              "field": "text_y",
              "type": "quantitative"
            },
            "text": {
              "field": "gene",
              "type": "nominal"
            },
            "angle": {
              "condition": {
                "test": "datum['width'] < (length(datum['gene']) * 200)",
                "value": 35
              },
              "value": 0
            }
          }
        }]
      },
      {
        "width": 1000,
        "height": 100,
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "position",
            "scale": {
              "domain": {
                "selection": "brush"
              }
            },
            "type": "quantitative",
            "axis": {
              "grid": false
            }
          },
          "y": {
            "field": "counts",
            "type": "quantitative",
            "axis": {
              "title": "Count"
            }
          }
        }
      }
    ],
    "config": {
      "concat": {
        "spacing": 0
      },
      "bar": {
        "continuousBandSize": 2
      }
    }
  }